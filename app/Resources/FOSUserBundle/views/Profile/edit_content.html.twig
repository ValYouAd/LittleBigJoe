{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-signin">
    <h1>{{ 'Edit profile'|trans() }}</h1>

    <div class="row">
        <section class="col-md-5">
            {{ form_row(form.email) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.birthday) }}
            {{ form_row(form.city) }}
            {{ form_row(form.country) }}
            {{ form_row(form.defaultLanguage) }}
            <div>
                <button class="btn validate-style">{{ 'Update my profile'|trans }}</button>
                <a href="{{ path('littlebigjoe_frontendbundle_user_delete_account') }}" class="btn mosaic-style">{{ 'Delete my account'|trans }}</a>
            </div>
        </section>
        <section class="col-md-2"></section>
        <section class="col-md-5">
            {{ form_row(form.facebookUrl) }}
            {{ form_row(form.twitterUrl) }}
            {{ form_row(form.googleUrl) }}
            {{ form_row(form.websiteUrl) }}
            {{ form_row(form.photo) }}
            {{ form_row(form.bio) }}
            {{ form_rest(form) }}
        </section>
    </div>
</form>

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-signin">
    <h1>{{ 'Change password'|trans() }}</h1>

    <div class="row">
        <section class="col-md-5">
            {{ form_widget(formPassword) }}
            <div>
                <button class="btn validate-style">{{ 'Change password'|trans }}</button>
            </div>
        </section>
    </div>
</form>