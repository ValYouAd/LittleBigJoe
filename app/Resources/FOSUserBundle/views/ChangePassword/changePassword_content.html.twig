{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-signin">
    <h2 class="form-signin-heading">{{ 'Change password'|trans() }}</h2>

    {{ form_widget(form) }}
    <div>
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="{{ 'change_password.submit'|trans }}"/>
    </div>
</form>
