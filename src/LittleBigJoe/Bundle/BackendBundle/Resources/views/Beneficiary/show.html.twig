{% extends '::admin.html.twig' %}

{% block title %}
    {{ 'backend.beneficiary'|trans() }} {{ entity.name }} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1><span class="glyphicon glyphicon-search"></span> {{ 'backend.beneficiary'|trans() }} {{ entity.name }}</h1>
    </div>
    <p class="lead">{{ 'backend.beneficiary_infos'|trans() }}</p>

    <div class="clearfix">&nbsp;</div>
    
    <ul class="nav nav-tabs" id="tabs">
		  <li class="active"><a href="#bank">{{ 'backend.bank_infos'|trans() }}</a></li>
		  <li><a href="#mangopay">{{ 'backend.mangopay_infos'|trans() }}</a></li>
		</ul>
				
   	<div class="tab-content">
			<div class="tab-pane active" id="bank">
			    <div class="clearfix">&nbsp;</div>
			    <p>{{ 'backend.bank_account_owner_name'|trans() }} : <strong>{{ entity.bankAccountOwnerName }}</strong></p>
	        <p>{{ 'backend.bank_account_owner_address'|trans() }} : <strong>{{ entity.bankAccountOwnerAddress }}</strong></p>
	        <p>{{ 'backend.bank_account_iban'|trans() }} : <strong>{{ entity.bankAccountIban }}</strong></p>
	        <p>{{ 'backend.bank_account_bic'|trans() }} : <strong>{{ entity.bankAccountBic }}</strong></p>
		  </div>		
		  <div class="tab-pane" id="mangopay">
			    <div class="clearfix">&nbsp;</div>
			    <p>{{ 'backend.mangopay_beneficiary_id'|trans() }} : <strong>{{ entity.mangopayBeneficiaryId }}</strong></p>
		  </div>
    </div>
    
    <div class="clearfix">&nbsp;</div>
    
    <p>
        <a class="btn btn-default" href="{{ path('littlebigjoe_backendbundle_beneficiaries') }}">
            {{ 'backend.back_to_list'|trans() }}
        </a>
        <a class="btn btn-primary" href="{{ path('littlebigjoe_backendbundle_beneficiaries_edit', { 'id': entity.id }) }}">
            {{ 'backend.edit'|trans() }}
        </a>
    </p>
{% endblock %}

{% block footer_javascripts %}
		{{ parent() }}
		<script type="text/javascript">
				$(document).ready(function(){
						$('#tabs a').click(function (e) {
						  e.preventDefault()
						  $(this).tab('show')
						});
				});
		</script>
{% endblock %}
