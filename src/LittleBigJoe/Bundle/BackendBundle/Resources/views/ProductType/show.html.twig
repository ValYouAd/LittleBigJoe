{% extends '::admin.html.twig' %}

{% block title %}
    {{ 'backend.product_type'|trans() }} {{ entity.name }} | {{ parent() }}
{% endblock %}

{% block body %}
<div class="page-header">
    <h1><span class="glyphicon glyphicon-search"></span> {{ 'backend.product_type'|trans() }} <span
                class="text-primary">{{ entity.name }}</span></h1>
</div>
<p class="lead">{{ 'backend.product_type_infos'|trans() }}</p>

<h3 class="media-heading">{{ entity.name }}</h4>
    {% if entity.isVisible %}
        <span class="label label-success">{{ 'backend.visible'|trans() }}</span>
    {% else %}
        <span class="label label-default">{{ 'backend.invisible'|trans() }}</span>
    {% endif %}

    <div class="clearfix">&nbsp;</div>
    <p>
        <a class="btn btn-default" href="{{ path('littlebigjoe_backendbundle_product_types') }}">
            {{ 'backend.back_to_list'|trans() }}
        </a>
        <a class="btn btn-primary" href="{{ path('littlebigjoe_backendbundle_product_types_edit', { 'id': entity.id }) }}">
            {{ 'backend.edit'|trans() }}
        </a>
    </p>
{% endblock %}
