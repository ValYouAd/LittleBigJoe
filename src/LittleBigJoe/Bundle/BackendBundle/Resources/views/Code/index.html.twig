{% extends '::admin.html.twig' %}

{% block title %}
    {{ 'backend.codes_list'|trans() }} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1><span class="glyphicon glyphicon-list"></span> {{ 'backend.codes_list'|trans() }}</h1>
    </div>
    <p class="lead">{{ 'backend.codes_list_resume'|trans() }}</p>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'backend.ID'|trans(), 'b.id') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'backend.beta_code'|trans(), 'b.betaCode') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'backend.related_users'|trans(), 'b.related_users') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'backend.used'|trans(), 'b.used') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'backend.max_use'|trans(), 'b.max_use') }}</th>
            <th>{{ 'backend.actions'|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('code_show', { 'id': entity.id }) }}">#{{ entity.id }}</a></td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.users|length }}</td>
                <td>{{ entity.used }}</td>
                <td>{{ entity.maxuse }}</td>
                <td>
                    <a class="btn btn-primary btn-xs"
                       href="{{ path('code_show', { 'id': entity.id }) }}">{{ 'backend.show'|trans() }}</a>
                    <a class="btn btn-default btn-xs"
                       href="{{ path('code_edit', { 'id': entity.id }) }}">{{ 'backend.edit'|trans() }}</a>
                    <a class="btn btn-xs"
                       action="{{ path('code_delete', { 'id': entity.id }) }}">{{ form(deleteForms[entity.id]) }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <p>
        <a class="btn btn-primary" href="{{ path('code_new') }}">
            {{ 'backend.create_code'|trans() }}
        </a>
    </p>
{% endblock %}