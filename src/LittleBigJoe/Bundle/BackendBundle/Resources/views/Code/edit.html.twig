{% extends '::admin.html.twig' %}

{% block title %}
    {{ 'backend.edit_code'|trans() }} {{ entity }} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1><span class="glyphicon glyphicon-edit"></span> {{ 'backend.edit_code'|trans() }} <span
                    class="text-primary">{{ entity }}</span></h1>
    </div>
    <p class="lead">{{ 'backend.fill_fields'|trans() }}</p>

    {{ form(edit_form, {attr:{role:'form' }}) }}

    <div class="clearfix">&nbsp;</div>
    <p>
        <a class="btn btn-default" href="{{ path('code') }}">
            {{ 'backend.back_to_list'|trans() }}
        </a>
    </p>

    <div class="clearfix">&nbsp;</div>
    <fieldset>
        <legend>{{ 'backend.delete_code'|trans() }}</legend>
        <p>{{ 'backend.delete_confirmation_code'|trans() }}</p>

        {{ form(delete_form, {attr:{role:'form' }}) }}
    </fieldset>
    <div class="clearfix">&nbsp;</div>
{% endblock %}