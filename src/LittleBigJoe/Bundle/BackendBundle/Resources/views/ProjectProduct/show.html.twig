{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ProjectProduct</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Pitch</th>
                <td>{{ entity.pitch }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Endingat</th>
                <td>{{ entity.endingAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Giftproduct</th>
                <td>{{ entity.giftProduct }}</td>
            </tr>
            <tr>
                <th>Giftpercentagefundsraised</th>
                <td>{{ entity.giftPercentageFundsRaised }}</td>
            </tr>
            <tr>
                <th>Submittedat</th>
                <td>{{ entity.submittedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Validatedat</th>
                <td>{{ entity.validatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('project-products') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('project-products_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
