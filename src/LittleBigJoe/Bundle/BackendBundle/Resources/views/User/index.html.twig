{% extends '::admin.html.twig' %}

{% block title %}
    {{ 'backend.users_list'|trans() }} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1><span class="glyphicon glyphicon-list"></span> {{ 'backend.users_list'|trans() }}</h1>
    </div>
    <p class="lead">{{ 'backend.users_list_resume'|trans() }}</p>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'backend.id'|trans(), 'u.id') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'backend.name'|trans(), 'u.lastname') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'backend.city'|trans(), 'u.city') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'backend.country'|trans(), 'u.country') }}</th>
            <th>{{ 'backend.related_projects'|trans() }}</th>
            <th>{{ 'backend.likes'|trans() }}</th>
            <th>{{ 'backend.contributions'|trans() }}</th>
            <th>{{ 'backend.actions'|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>
                    <a href="{{ path('littlebigjoe_backendbundle_users_show', { 'id': entity.id }) }}">#{{ entity.id }}</a>
                </td>
                <td>{{ entity }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.projects|length }}</td>
                <td>{{ entity.likes|length }}</td>
                <td>{{ entity.contributions|length }}</td>
                <td>
                    <a class="btn btn-primary btn-xs"
                       href="{{ path('littlebigjoe_backendbundle_users_show', { 'id': entity.id }) }}">{{ 'backend.show'|trans() }}</a>
                    <a class="btn btn-default btn-xs"
                       href="{{ path('littlebigjoe_backendbundle_users_edit', { 'id': entity.id }) }}">{{ 'backend.edit'|trans() }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <p>
        <a class="btn btn-primary" href="{{ path('littlebigjoe_backendbundle_users_new') }}">
            {{ 'backend.create_user'|trans() }}
        </a>
    </p>
{% endblock %}
