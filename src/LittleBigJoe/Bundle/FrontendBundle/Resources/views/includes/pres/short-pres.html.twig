
<div class="short-sheet">

    <div class="img-container">
        {% if type == 'brand' and item.logo %}
            <img class="pres-thumbnail" src="{{ asset(item.logo) }}" />
        {% else %}
            <img class="pres-thumbnail" src="http://placehold.it/690x460" alt="alt-LBJ - project image" />
        {% endif %}
    </div>

    <div class="short-infos-container">
        {% if type == 'brand' %}
            <h3><a href="{{ path('littlebigjoe_frontendbundle_brand_show', {'slug': item.slug}) }}">{{ item.name }}</a></h3>
            <div class="project-name">{{ item.projects.0.name }}</div>
            <div class="author"><a href="{{ path('littlebigjoe_frontendbundle_user_show', {'id': item.projects.0.user.id}) }}">
                <img class="icon" src="{{ asset('static/img/icons/icon-author.png') }}" alt="alt-LBJ - author" /> {{ item.projects.0.user }}</a>
            </div>
        {% else %}
            <h3><a href="{{ path('littlebigjoe_frontendbundle_project_show', {'slug': item.project.slug}) }}">{{ item.project.name }}</a></h3>
            <div class="edit-time"><img class="icon" src="{{ asset('static/img/icons/icon-clock.png') }}" alt="alt-LBJ - clock" /> {{ item.createdAt|ago }}</div>
            <div class="author"><a href="{{ path('littlebigjoe_frontendbundle_user_show', {'id': item.project.user.id}) }}">
                <img class="icon" src="{{ asset('static/img/icons/icon-author.png') }}" alt="alt-LBJ - author" /> {{ item.project.user }}</a>
            </div>
        {% endif %}
    </div>

</div>
