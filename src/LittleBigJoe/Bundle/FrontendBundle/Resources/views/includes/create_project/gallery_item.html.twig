<div id="{{ projectMedia.type }}_{{ projectMedia.id }}" style="float:left; width:30%">
    <img src="{{ projectMedia.image }}" width="100" />
    <input type="checkbox" checked="checked" class="mediaId" name="createProject[{{ projectMedia.type }}s][]" id="createProject_{{ projectMedia.type }}s_{{ projectMedia.id }}" value="{{ projectMedia.id }}" />
    <input type="hidden" class="mediaType" name="createProject_{{ projectMedia.type }}_{{ projectMedia.id }}_type" id="createProject_{{ projectMedia.type }}_{{ projectMedia.id }}_type" value="{{ projectMedia.type }}" />
    <div class="clearfix"></div>
    <p>
        <span class="highlightGalleryItem">{% if projectMedia.highlighted %}<i class="fa fa-star"></i>{% else %}<i class="fa fa-star-o"></i>{% endif %}</span>
        <span class="deleteGalleryItem"><i class="fa fa-trash-o"></i></span>
    </p>
</div>