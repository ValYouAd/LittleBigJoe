{% extends '::base.html.twig' %}

{% block body %}
    <section>
        <article>
            <div class="padding10 white-container">
                <div class="article-header">
                    <h2><span class="grand-hotel">{{ 'Contact'|trans() }}</span></h2>
                </div>

                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d28749803.353435874!2d62.96551015810947!3d28.404242176016496!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2s!4v1406022025316" width="100%" height="450" frameborder="0" style="border:0"></iframe>

                <div class="row mb3">
                    <div id="contactContainer" class="col-sm-6">
                        {% for type, flashMessages in app.session.flashbag.all() %}
                            {% for flashMessage in flashMessages %}
                                <div class="alert alert-{{ type }}">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {{ form(form) }}
                    </div>
                    <div class="col-sm-5">
                        <h2>{{ 'Follow us !'|trans() }}</h2>
                        <a target="_blank" href="https://www.facebook.com/pages/LittleBigJoe/216230115202124"><img src="{{ asset('static/img/contact-facebook.jpg') }}"></a>
                        <a target="_blank" href="https://twitter.com/_LittleBigJoe"><img src="{{ asset('static/img/contact-twitter.jpg') }}"></a>
                        <a target="_blank" href="https://plus.google.com/114082920899180346968/about"><img src="{{ asset('static/img/contact-google.png') }}"></a>
                    </div>
                </div>
            </div>
        </article>
    </section>
{% endblock %}